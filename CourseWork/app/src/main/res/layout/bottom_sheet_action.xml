<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/custom_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_reaction"
        style="@style/MessageActionStyle"
        android:layout_marginTop="20dp"
        android:text="@string/add_reaction" />

    <TextView
        android:id="@+id/tv_edit_message"
        style="@style/MessageActionStyle"
        android:text="@string/edit_message" />

    <TextView
        android:id="@+id/tv_copy_to_clipboard"
        style="@style/MessageActionStyle"
        android:text="@string/copy_to_click_board" />

    <TextView
        android:id="@+id/tv_delete_message"
        style="@style/MessageActionStyle"
        android:layout_marginBottom="20dp"
        android:text="@string/delete_message" />

</LinearLayout>
