<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clTopicName"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    tools:background="@color/custom_toolbar_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTopicName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="41dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/tab_selected_color"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Testing"
        />

    <TextView
        android:id="@+id/tvNumberOfMess"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/tab_selected_color"
        android:fontFamily="@font/inter_light"
        app:layout_constraintStart_toEndOf="@id/tvTopicName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1240 mes"
        />
</androidx.constraintlayout.widget.ConstraintLayout>